extends layout
block append styles
	link(rel="stylesheet", href="/stylesheets/index.css")
block content
	div.col-xs-12#goGophers
		img(src="images/logo.png", height="200px")#logo
	div#dirtySelectWrapper.text-center.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
		label(for='dirtySelect') Please upload an image of a dirty 
		select(onchange="setSchoolColors(this.value)")#dirtySelect
			option(value="badger") Badger
			option(value="boilermaker") Boilermaker
			option(value="buckeye") Buckeye
			option(value="hawkeye") Hawkeye
			option(value="hoosier") Hoosier
			option(value="husker") Husker
			option(value="illini") Illini
			option(value="nittany lion") Nittany Lion
			option(value="scarlet knight") Scarlet Knight
			option(value="spartan") Spartan
			option(value="terrapin") Terrapin
			option(value="wildcat") Wildcat
			option(value="wolverine") Wolverine
	div#pleaseSelect.text-center.col-xs-10.col-xs-offset-1.col-md-8.col-md-offset-2
	div.col-xs-12.text-center#imageWrapper
			img#uploadedImage(src='#', alt='your image')
	form#uploadForm.col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3
		label.btn.btn-default.btn-info.col-xs-12.col-md-5
			| Upload 
			input#imgInput(type='file',accept="image/*", style='display: none;')
		label.btn.btn-default.btn-info.col-xs-12.col-md-5.col-md-offset-2#useSampleImage
			| Use Sample Image 
	button#submitImage.btn.btn-success.col-xs-10.col-xs-offset-1.col-md-6.col-md-offset-3 Submit
block append scripts
	script(src="/javascripts/uploader.js")